include ../Makefile.inc

#  We reset CC to CXX so that the default rule for mesh: .o works. 
CC         = $(CXX)

GOAL       = mesh
DEPEND     = Makefile.depend

LDFLAGS   += -L../stm/obj -lstm
CXXFLAGS  += -I. -I../ -include config.h
SOURCES    = point edge edge_set dwyer side worker my_thread mesh \
             queues

#  Generate lists of interesting files by appending .cpp and .o to SOURCES
CFILES     = $(patsubst %, %.cpp, $(SOURCES))
OBJFILES   = $(patsubst %, %.o,   $(SOURCES))

#  The original code has provisions for fine grained locking, via setting the
#  FGL flag. Just set FGL equal to something to set the FGL flag for the build.
ifdef FGL
    CXXFLAGS += -DFGL
endif

.PHONY: all clean

all: $(DEPEND) $(GOAL)

$(GOAL): $(OBJFILES)
	$(FINAL_CXX) -o $@ $^ $(LDFLAGS)

clean:
	@rm -rf $(OBJFILES) $(GOAL)

realclean: clean
	@rm -rf $(DEPEND) *.bc

#  Old fashioned dependency builder
$(DEPEND): $(CFILES) ../config.h
	@echo -n "Building dependencies as $@..."
	@echo '# DO NOT EDIT THIS FILE -- it is automatically generated' > $@
	@$(CXX) -MM $(CXXFLAGS) $(CFILES) >> $@
	@echo "done"

include $(DEPEND)
